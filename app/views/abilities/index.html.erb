<div class="mt-3" id="moves">
  <div class="d-flex justify-content-between">
    <h2>Abilities</h2>
    <%= search_form_for @q do |f| %>
      <div class="d-flex">
        <%= f.search_field :name_cont, class: "form-control me-2", placeholder: "Search"  %>
        <%= f.submit "Search", class: "btn btn-outline-danger" %>
      </div>
    <% end %>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
      </tr>
    </thead>
    <tbody>
      <% @abilities.each do |ability| %>
        <tr>
          <th scope="row"><%= ability.id %></th>
          <td><%= link_to ability.name, ability, class: "link-danger text-decoration-none" %></td>
          <td><%= ability.short_description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @abilities %>
