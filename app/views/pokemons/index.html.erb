<div class="mt-3" id="pokemon">
  <div class="d-flex justify-content-between">
    <h2>Pok√©mon</h2>
    <%= render "common/search_form" %>
  </div>
  <div class="d-flex flex-wrap mx-n3 mt-3">
    <% @pokemen.each do |pokemon| %>
    <div class="w-25 px-3">
      <%=link_to(image_tag(pokemon&.sprite, class: "pokemon mw-100 rounded bg-light"), pokemon_path(pokemon), class: "navbar-brand") %>
      <p class="mb-0">#<%= "%04d" % [pokemon&.id]  %></p>
      <p class="fw-bold text-center fs-4"><%= pokemon&.name.capitalize() %></p>
    </div>
    <% end %>
  </div>

  <%= paginate @pokemen %>
</div>
