<div class="mt-3" id="pokemon">
   <%= paginate @pokemen %>

  <div class="d-flex flex-wrap mx-n3 mt-3">
    <% @pokemen.each do |pokemon| %>
    <div class="w-25 px-3">
      <%=link_to(image_tag(pokemon&.sprite, class: "img-thumbnail bg-light"), pokemon_path(pokemon), class: "navbar-brand") %>
      <p class="mb-0">#<%= "%04d" % [pokemon&.id]  %></p>
      <p class="fw-bold text-center fs-4"><%= pokemon&.name.capitalize() %></p>
    </div>
    <% end %>
  </div>

  <%= paginate @pokemen %>
</div>
